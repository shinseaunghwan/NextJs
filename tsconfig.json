{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "components/navigation.tsx",
    "app/React/page.Tsx",
    "app/layout.tsx",
    "app/not-found.tsx",
    "app/React/layout.tsx",
    "app/(home)/page.tsx",
    "components/(search)/search.js"
, "components/(credits)/credit-list.jsx"  ],
  "exclude": [
    "node_modules"
  ]
}
